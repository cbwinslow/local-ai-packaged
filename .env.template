# ========================================================================================
# Local AI Package - Comprehensive Environment Configuration
# ========================================================================================
# This file contains ALL environment variables needed for the complete Local AI Package
# Copy to .env and run scripts/generate-secrets.sh to populate secure values
# ========================================================================================

# ========================
# Core Application Settings
# ========================
NODE_ENV=development
ENVIRONMENT=private
DOCKER_PROJECT_NAME=localai

# ========================
# Supabase Configuration
# ========================
POSTGRES_PASSWORD=your-secure-postgres-password
JWT_SECRET=your-jwt-secret-256-bit
ANON_KEY=your-supabase-anon-key
SERVICE_ROLE_KEY=your-supabase-service-role-key
DASHBOARD_USERNAME=your-dashboard-username
DASHBOARD_PASSWORD=your-dashboard-password
POOLER_TENANT_ID=1000

# Supabase URLs and Ports
POSTGRES_HOST=db
POSTGRES_DB=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
SITE_URL=http://localhost:3000

# Supavisor Configuration
POOLER_PROXY_PORT_TRANSACTION=6543
POOLER_DEFAULT_POOL_SIZE=20
POOLER_MAX_CLIENT_CONN=100
POOLER_DB_POOL_SIZE=5
SECRET_KEY_BASE=your-secret-key-base
VAULT_ENC_KEY=your-vault-encryption-key

# ========================
# N8N Workflow Automation
# ========================
N8N_ENCRYPTION_KEY=your-n8n-encryption-key
N8N_USER_MANAGEMENT_JWT_SECRET=your-n8n-jwt-secret
N8N_HOSTNAME=localhost

# ========================
# AI Services Configuration
# ========================
# Flowise
FLOWISE_USERNAME=your-flowise-username
FLOWISE_PASSWORD=your-flowise-password
FLOWISE_HOSTNAME=localhost

# Open WebUI
WEBUI_HOSTNAME=localhost

# Langfuse (LLM Observability)
LANGFUSE_HOSTNAME=localhost
LANGFUSE_SALT=your-langfuse-salt
NEXTAUTH_SECRET=your-nextauth-secret
ENCRYPTION_KEY=your-encryption-key
TELEMETRY_ENABLED=false
LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES=true

# Langfuse Initialization (Optional)
LANGFUSE_INIT_ORG_ID=
LANGFUSE_INIT_ORG_NAME=Local AI Organization
LANGFUSE_INIT_PROJECT_ID=
LANGFUSE_INIT_PROJECT_NAME=Government Analysis
LANGFUSE_INIT_PROJECT_PUBLIC_KEY=
LANGFUSE_INIT_PROJECT_SECRET_KEY=
LANGFUSE_INIT_USER_EMAIL=admin@localhost
LANGFUSE_INIT_USER_NAME=Admin User
LANGFUSE_INIT_USER_PASSWORD=

# ========================
# Database Services
# ========================
# PostgreSQL (Shared)
POSTGRES_VERSION=16-alpine

# ClickHouse (Analytics)
CLICKHOUSE_PASSWORD=your-clickhouse-password
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_MIGRATION_URL=clickhouse://clickhouse:9000
CLICKHOUSE_URL=http://clickhouse:8123
CLICKHOUSE_CLUSTER_ENABLED=false

# Neo4j (Graph Database)
NEO4J_AUTH=neo4j/your-neo4j-password
NEO4J_HOSTNAME=localhost

# Redis/Valkey (Cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_AUTH=LOCALONLYREDIS
REDIS_TLS_ENABLED=false
REDIS_TLS_CA=/certs/ca.crt
REDIS_TLS_CERT=/certs/redis.crt
REDIS_TLS_KEY=/certs/redis.key

# ========================
# Storage Services
# ========================
# MinIO (S3-Compatible)
MINIO_ROOT_PASSWORD=your-minio-password

# Langfuse S3 Configuration
LANGFUSE_S3_EVENT_UPLOAD_BUCKET=langfuse
LANGFUSE_S3_EVENT_UPLOAD_REGION=auto
LANGFUSE_S3_EVENT_UPLOAD_ACCESS_KEY_ID=minio
LANGFUSE_S3_EVENT_UPLOAD_ENDPOINT=http://minio:9000
LANGFUSE_S3_EVENT_UPLOAD_FORCE_PATH_STYLE=true
LANGFUSE_S3_EVENT_UPLOAD_PREFIX=events/

LANGFUSE_S3_MEDIA_UPLOAD_BUCKET=langfuse
LANGFUSE_S3_MEDIA_UPLOAD_REGION=auto
LANGFUSE_S3_MEDIA_UPLOAD_ACCESS_KEY_ID=minio
LANGFUSE_S3_MEDIA_UPLOAD_ENDPOINT=http://localhost:9090
LANGFUSE_S3_MEDIA_UPLOAD_FORCE_PATH_STYLE=true
LANGFUSE_S3_MEDIA_UPLOAD_PREFIX=media/

LANGFUSE_S3_BATCH_EXPORT_ENABLED=false
LANGFUSE_S3_BATCH_EXPORT_BUCKET=langfuse
LANGFUSE_S3_BATCH_EXPORT_PREFIX=exports/
LANGFUSE_S3_BATCH_EXPORT_REGION=auto
LANGFUSE_S3_BATCH_EXPORT_ENDPOINT=http://minio:9000
LANGFUSE_S3_BATCH_EXPORT_EXTERNAL_ENDPOINT=http://localhost:9090
LANGFUSE_S3_BATCH_EXPORT_ACCESS_KEY_ID=minio
LANGFUSE_S3_BATCH_EXPORT_FORCE_PATH_STYLE=true

# ========================
# Search & Discovery
# ========================
# SearXNG
SEARXNG_HOSTNAME=localhost
SEARXNG_SECRET_KEY=your-searxng-secret
SEARXNG_UWSGI_WORKERS=4
SEARXNG_UWSGI_THREADS=4

# Qdrant (Vector Database)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your-qdrant-api-key

# ========================
# Frontend Applications
# ========================
FRONTEND_HOSTNAME=localhost
FRONTEND_TITLE=Local AI Package
FRONTEND_DESCRIPTION=Self-hosted AI Development Environment

AGENTIC_HOSTNAME=localhost
SUPABASE_HOSTNAME=localhost

# ========================
# External API Keys
# ========================
# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GROQ_API_KEY=your-groq-api-key
TOGETHER_API_KEY=your-together-api-key

# Government Data APIs
CONGRESS_GOV_API_KEY=your-congress-gov-api-key
GOVINFO_API_KEY=your-govinfo-api-key
FEDERAL_REGISTER_API_KEY=your-federal-register-api-key
FEC_API_KEY=your-fec-api-key
OPENSECRETS_API_KEY=your-opensecrets-api-key

# Development Tools
GITHUB_TOKEN=your-github-token
LINEAR_API_KEY=your-linear-api-key

# ========================
# Monitoring & Observability
# ========================
# Grafana
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Prometheus
PROMETHEUS_PASSWORD=your-prometheus-password

# Langfuse Queue Configuration
LANGFUSE_INGESTION_QUEUE_DELAY_MS=
LANGFUSE_INGESTION_CLICKHOUSE_WRITE_INTERVAL_MS=

# Logflare (Optional)
LOGFLARE_PUBLIC_TOKEN=your-logflare-public-token
LOGFLARE_PRIVATE_TOKEN=your-logflare-private-token

# ========================
# Message Queue & Processing
# ========================
# RabbitMQ
RABBITMQ_USER=your-rabbitmq-user
RABBITMQ_PASSWORD=your-rabbitmq-password

# Graylog (Logging)
GRAYLOG_PASSWORD=your-graylog-password

# ========================
# Security & TLS
# ========================
CORS_ORIGIN=http://localhost:3000
TLS_ENABLED=false
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# ========================
# Docker Configuration
# ========================
DOCKER_SOCKET_LOCATION=/var/run/docker.sock

# ========================
# Feature Flags
# ========================
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ANALYTICS=false
ENABLE_TELEMETRY=false
DEBUG_MODE=false

# ========================
# Backup & Recovery
# ========================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# ========================
# Government Data Ingestion
# ========================
INGESTION_ENABLED=true
INGESTION_SCHEDULE=0 3 * * *
INGESTION_BATCH_SIZE=1000
INGESTION_MAX_RETRIES=3
INGESTION_DELAY_SECONDS=1

# Federal Sources
ENABLE_CONGRESS_INGESTION=true
ENABLE_GOVINFO_INGESTION=true
ENABLE_FEC_INGESTION=true
ENABLE_FEDERAL_REGISTER_INGESTION=true

# State & Local Sources
ENABLE_STATE_INGESTION=true
ENABLE_LOCAL_INGESTION=true

# Intelligence Sources (Declassified)
ENABLE_CIA_INGESTION=true
ENABLE_FBI_INGESTION=true
ENABLE_NSA_INGESTION=true
ENABLE_DARPA_INGESTION=true

# ========================
# Performance Tuning
# ========================
MAX_CONCURRENT_INGESTIONS=5
DATABASE_POOL_SIZE=20
VECTOR_DB_BATCH_SIZE=100
GRAPH_DB_BATCH_SIZE=50

# ========================
# Rate Limiting
# ========================
API_RATE_LIMIT_PER_MINUTE=1000
INGESTION_RATE_LIMIT_PER_SECOND=10
CONCURRENT_REQUEST_LIMIT=50